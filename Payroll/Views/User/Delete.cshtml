@using Payroll.Helpers
@model Payroll.Models.UserForView

@{
    ViewBag.Title = "Delete User";
    Layout = ViewHelper.DefaultLayout;
    ViewBag.IsUserMenuActive = "active";
}

<a href='@Url.Action("Index", "User")'
   class="btn btn-primary" role="button">
    <span class="glyphicon glyphicon-chevron-left"></span>
    Back to List
</a>

@using (Html.BeginForm("Delete", "User", FormMethod.Post, new { @class = "form-horizontal" }))
{
    @Html.AntiForgeryToken()

    <dl>
        <dt>Username:</dt>
        <dd>@Model.User.USERNAME</dd>

        <dt>Category:</dt>
        <dd>@Model.UserCategoryDescList.First(cat => cat.Value == Model.User.USER_CATEGORY).Text</dd>
    </dl>

    <div class="input-group" style="margin-top: 10px;">
        <button type="submit" class="btn btn-primary">
            <span class="glyphicon glyphicon-remove"></span>
            Delete
        </button>
    </div>
}