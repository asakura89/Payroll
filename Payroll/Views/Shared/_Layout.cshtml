<!DOCTYPE html>
<html>
    <head>
        <meta charset="utf-8" />
        <meta name="viewport" content="width=device-width" />
        <title>@ViewBag.Title</title>
        @Styles.Render("~/Content")
        @Scripts.Render("~/bundles/modernizr")
    </head>
    <body>
        <div class="container">
            <h2>@ViewBag.Title</h2>

            <ul class="nav nav-pills">
                <li class="@ViewBag.IsDashboardMenuActive"><a href='@Url.Action("Dashboard", "Home")'>Dashboard</a></li>
                <li class="@ViewBag.IsUserMenuActive"><a href='@Url.Action("Index", "User")'>User</a></li>
                <li class="@ViewBag.IsPaymentMenuActive"><a href='@Url.Action("Index", "Payment")'>Payment</a></li>
                <li class="@ViewBag.IsSalaryMenuActive"><a href='@Url.Action("Index", "Salary")'>Salary</a></li>
                <li class="@ViewBag.IsRateMenuActive"><a href='@Url.Action("Index", "Rate")'>Rate</a></li>
            </ul>
        </div>
        <div class="container" style="margin-top: 20px;">
            @RenderBody()
        </div>

        @Scripts.Render("~/bundles/jquery")
        @RenderSection("scripts", required: false)
    </body>
</html>
