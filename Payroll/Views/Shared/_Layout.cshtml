<!DOCTYPE html>
<html>
    <head>
        <meta charset="utf-8" />
        <meta name="viewport" content="width=device-width" />
        <title>@ViewBag.Title</title>
        @Styles.Render("~/Content")
        <link href="@Url.Content("~/Content/kayo.min.css")" rel="stylesheet" type="text/css" />
        @Scripts.Render("~/bundles/modernizr")
    </head>
    <body>
        <div class="container">
            <h2>@ViewBag.Title</h2>

            <ul class="nav nav-tabs">
                <li class="@ViewBag.IsDashboardMenuActive"><a href='@Url.Action("Dashboard", "Home")'>Dashboard</a></li>
                <li class="@ViewBag.IsUserMenuActive"><a href='@Url.Action("Index", "User")'>User</a></li>
                <li class="@ViewBag.IsSalaryMenuActive"><a href='@Url.Action("Index", "Salary")'>Salary</a></li>
                <li class="@ViewBag.IsRateMenuActive"><a href='@Url.Action("Index", "Rate")'>Rate</a></li>
                <li class="@ViewBag.IsPaymentMenuActive"><a href='@Url.Action("Index", "Payment")'>Payment</a></li>
            </ul>
        </div>

        <div class="container" style="margin-top: 20px;">
            <div id="info-message" class="alert-success">@if (TempData.ContainsKey("InfoMessage")) { @Html.Raw(TempData["InfoMessage"]); }</div>
            <div id="error-message" class="alert-danger">@if (TempData.ContainsKey("ErrorMessage")) { @Html.Raw(TempData["ErrorMessage"]); }</div>
            <br/>
            @RenderBody()
        </div>

        @Scripts.Render("~/bundles/jquery")
        <script src="@Url.Content("~/Scripts/kayo.min.js")" type="text/javascript"></script>
        @RenderSection("scripts", required: false)
    </body>
</html>
