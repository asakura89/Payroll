@using Payroll.Helpers
@model Payroll.Models.RateForView

@{
    ViewBag.Title = "Create New Rate";
    Layout = ViewHelper.DefaultLayout;
    ViewBag.IsRateMenuActive = "active";
}

<a href='@Url.Action("Index", "Rate")'
   class="btn btn-primary" role="button">
    <span class="glyphicon glyphicon-chevron-left"></span>
    Back to List
</a>

@using (Html.BeginForm("Create", "Rate", FormMethod.Post, new { @class = "form-horizontal" }))
{
    @Html.AntiForgeryToken()
    @Html.ValidationSummary(true)

    <div class="input-group">
        @Html.LabelFor(model => model.Rate.RateName, "Name", new { @class = "control-label" })
        @Html.TextBoxFor(model => model.Rate.RateName, new { @class = "form-control" })
        @Html.ValidationMessageFor(model => model.Rate.RateName)
    </div>
    <div class="input-group">
        @Html.LabelFor(model => model.Rate.RateValue, "Value", new { @class = "control-label" })
        @Html.TextBoxFor(model => model.Rate.RateValue, new { @class = "form-control" })
        @Html.ValidationMessageFor(model => model.Rate.RateValue)
    </div>
    <div class="input-group">
        @Html.LabelFor(model => model.Rate.RateType, "Type", new { @class = "control-label" })
        @Html.DropDownListFor(model => model.Rate.RateType, Model.RateTypeDescList, new { @class = "form-control" })
        @Html.ValidationMessageFor(model => model.Rate.RateType)
    </div>
    <div class="input-group" style="margin-top: 10px;">
        <button type="submit" class="btn btn-primary">
            <span class="glyphicon glyphicon-floppy-disk"></span>
            Save
        </button>
    </div>
}

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
